    {
      "name": "Restaurants",
      "item": [
        {
          "name": "Get All Restaurants",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/restaurants",
              "host": ["{{base_url}}"],
              "path": ["restaurants"]
            },
            "description": "Get all restaurants filtered by user's country. Admin sees all restaurants."
          }
        },
        {
          "name": "Get Restaurant by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/restaurants/1",
              "host": ["{{base_url}}"],
              "path": ["restaurants", "1"]
            },
            "description": "Get specific restaurant details. Access denied if restaurant is from different country."
          }
        },
        {
          "name": "Get Restaurant Menu",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/restaurants/1/menu",
              "host": ["{{base_url}}"],
              "path": ["restaurants", "1", "menu"]
            },
            "description": "Get menu items for a restaurant. Filtered by location."
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            },
            "description": "Get user's orders. Admin sees all orders, others see only their country's orders."
          }
        },
        {
          "name": "Place Order (Manager/Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"restaurantId\": 1,\n      \"restaurantName\": \"Spice Garden\",\n      \"itemId\": 1,\n      \"itemName\": \"Butter Chicken\",\n      \"quantity\": 2,\n      \"price\": 350,\n      \"currency\": \"INR\"\n    },\n    {\n      \"restaurantId\": 1,\n      \"restaurantName\": \"Spice Garden\",\n      \"itemId\": 4,\n      \"itemName\": \"Naan\",\n      \"quantity\": 3,\n      \"price\": 50,\n      \"currency\": \"INR\"\n    }\n  ],\n  \"paymentMethod\": {\n    \"id\": 1,\n    \"type\": \"Credit Card\",\n    \"last4\": \"4242\",\n    \"brand\": \"Visa\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            },
            "description": "Place a new order. Only Manager and Admin can place orders. Member will get 403 error."
          }
        },
        {
          "name": "Place Order (Member - Should Fail)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"restaurantId\": 1,\n      \"restaurantName\": \"Spice Garden\",\n      \"itemId\": 1,\n      \"itemName\": \"Butter Chicken\",\n      \"quantity\": 1,\n      \"price\": 350,\n      \"currency\": \"INR\"\n    }\n  ],\n  \"paymentMethod\": {\n    \"id\": 1,\n    \"type\": \"Credit Card\",\n    \"last4\": \"4242\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            },
            "description": "Test RBAC: Member trying to place order should get 403 Forbidden error."
          }
        },
        {
          "name": "Cancel Order (Manager/Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/orders/1",
              "host": ["{{base_url}}"],
              "path": ["orders", "1"]
            },
            "description": "Cancel an order. Only Manager and Admin can cancel. Must be from same country."
          }
        },
        {
          "name": "Cancel Order (Member - Should Fail)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/orders/1",
              "host": ["{{base_url}}"],
              "path": ["orders", "1"]
            },
            "description": "Test RBAC: Member trying to cancel order should get 403 Forbidden error."
          }
